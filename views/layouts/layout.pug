  body.cnt-home
    header.header-style-1
      // ============================================== TOP MENU ==============================================
      .top-bar.animate-dropdown
        .container
          .header-top-inner
            .cnt-account
              ul.list-unstyled
                if (checkLogin)
                  li.myaccount
                    a(href='/account')
                      span My Account
                li.wishlist
                  a(href='/wishlist')
                    span Wishlist
                li.header_cart.hidden-xs
                  a(href='/cart')
                    span My Cart
                li.login  
                  if (!checkLogin)
                    a(href='/authentication')
                      span Login
                  else
                    a(href='/authentication/logout')
                      span Logout
            .clearfix
      // ============================================== TOP MENU : END ==============================================
      .main-header
        .container
          .row
            .col-xs-12.col-sm-12.col-md-3.logo-holder
              // ============================================================= LOGO =============================================================
              .logo
                a(href='/home')
                  img(src='/assets/images/logo.png', alt='logo')
              // /.logo
              // ============================================================= LOGO : END =============================================================
            // /.logo-holder
            .col-lg-7.col-md-6.col-sm-8.col-xs-12.top-search-holder
              // /.contact-row
              // ============================================================= SEARCH AREA =============================================================
              .search-area
                form(method="GET", action="/products/search")
                  input.search-field(placeholder='Tìm kiếm...', name="product")
                  button.search-button(style="outline: none; border: none;")
              // /.search-area
              // ============================================================= SEARCH AREA : END =============================================================
            // /.top-search-holder
            .col-lg-2.col-md-3.col-sm-4.col-xs-12.animate-dropdown.top-cart-row
              // ============================================================= SHOPPING CART DROPDOWN =============================================================
              .dropdown.dropdown-cart
                a.dropdown-toggle.lnk-cart(href='#', data-toggle='dropdown')
                  .items-cart-inner
                    .basket
                      .basket-item-count
                        span.count= cartLength || 0
                      .total-price-basket
                        span.lbl Giỏ hàng
                        if (finalPrice)
                          span.value= finalPrice.toLocaleString('vi', {style : 'currency', currency : 'VND'}) 
                        else 
                          span.value 0
                ul.dropdown-menu
                  if (cartItems.length === 0)
                    h4 Bạn chưa thêm gì vào giỏ hàng
                  else
                    each item in cartItems
                      li
                        .cart-item.product-summary
                          .row
                            .col-xs-4
                              .image
                                a(href='/products/detail/'+item._id)
                                  img(src=item.image[0], alt='')
                            .col-xs-7
                              h3.name
                                a(href='/products/detail/'+item._id)= item.name
                              .price= item.priceSale.toLocaleString('vi', {style : 'currency', currency : 'VND'})   
                            .col-xs-1.action
                              a(href='#')
                                i.fa.fa-trash
                    .clearfix
                    hr
                    .clearfix.cart-total
                      .pull-right
                        span.text Tạm tính :
                        if (finalPrice)
                          span.price= finalPrice.toLocaleString('vi', {style : 'currency', currency : 'VND'})   
                        else
                          span.price 0
                      .clearfix
                      a.btn.btn-upper.btn-primary.btn-block.m-t-20(href='/cart') Thanh toán
                    // /.cart-total
                // /.dropdown-menu
              // /.dropdown-cart
              // ============================================================= SHOPPING CART DROPDOWN : END=============================================================
            // /.top-cart-row
          // /.row
        // /.container
      // /.main-header
      // ============================================== NAVBAR ==============================================
      .header-nav.animate-dropdown
        .container
          .yamm.navbar.navbar-default(role='navigation')
            .navbar-header
              button.navbar-toggle.collapsed(data-target='#mc-horizontal-menu-collapse', data-toggle='collapse', type='button')
