.item.item-carousel
  .products
    .product
      .product-image
        .image
          a(href='/products/detail/'+ product._id)
            img(src=product.image[0], alt='')
            img.hover-image(src=product.image[1], alt='')
        // /.image
        .tag.sale
          span sale
      // /.product-image
      .product-info.text-left
        h3.name
          a(href='detail.html')= product.name
        input(type="hidden" readonly class="rating" value=product.rating_point ? product.rating_point : 0)
        .description
        .product-price
          span.price= product.priceSale
          span.price-before-discount= product.price
        // /.product-price
      // /.product-info
      .cart.clearfix.animate-effect
        .action
          ul.list-unstyled
            li.add-cart-button.btn-group
              a.btn.btn-primary.icon(href='/products/add-to-cart/'+product._id)
                i.fa.fa-shopping-cart
            li.lnk.wishlist
              a.add-to-cart(href='/products/add-to-wishlist/'+product._id, title='Wishlist')
                i.icon.fa.fa-heart
        // /.action
      // /.cart
    // /.product
